import pepe.*
import bonos.*
import categorias.*

describe "sueldo pepe" {
	test "pepe gerente (por defecto) cobra neto de 1000" {
		assert.equals(1000, pepe.sueldoNeto())
	}

	test "pepe cadete cobra neto de 1500" {
		pepe.categoria(cadete)
		assert.equals(1500, pepe.sueldoNeto())
	}
	
	test "integrador" {
		pepe.categoria(cadete)
		pepe.bonoPresentismo(bonoDependeFaltas)
		pepe.bonoResultado(bonoPorcentaje)
		pepe.cantidadDeFaltas(1)
		
		assert.equals(1500 + 150 + 50, pepe.sueldo())
	}
	
}